#version 450layout(location = 0) out vec4 fragColor;vec2 vertices[4] = vec2[](    vec2(-0.5, -0.5),    vec2(0.5, -0.5),    vec2(-0.5, 0.5),    vec2(0.5, 0.5));vec4 colors[4] = vec4[](    vec4(1, 0, 0, 1),    vec4(0, 1, 0, 1),    vec4(0, 0, 1, 1),    vec4(1, 0, 1, 1));void main() {    gl_Position = vec4(vertices[gl_VertexIndex], 0.0, 1.0);    fragColor = colors[gl_VertexIndex];}