#version 450layout(location = 0) out vec3 fragUV;vec2 positions[6] = vec2[](    vec2(-1.0, -1.0),    vec2(1.0, -1.0),    vec2(1.0, 1.0),    vec2(1.0, 1.0),    vec2(-1.0, 1.0),    vec2(-1.0, -1.0));layout( push_constant ) uniform constants{    vec2 scale;    vec2 pos;	uint texture_index;} PushConstants;void main() {    mat3 transform;    transform[0] = vec3(PushConstants.scale.x, 0.0, 0.0);    transform[1] = vec3(0.0, PushConstants.scale.y, 0.0);    transform[2] = vec3(PushConstants.pos.xy, 1.0f);    gl_Position = vec4( transform * vec3(positions[gl_VertexIndex], 1.0), 1.0);    fragUV = vec3((positions[gl_VertexIndex] + vec2(1.0)) / 2.0, PushConstants.texture_index);}