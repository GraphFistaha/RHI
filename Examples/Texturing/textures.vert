#version 450layout(location = 0) out vec2 fragUV;vec2 positions[6] = vec2[](    vec2(-1.0, -1.0),    vec2(1.0, -1.0),    vec2(1.0, 1.0),    vec2(1.0, 1.0),    vec2(-1.0, 1.0),    vec2(-1.0, -1.0));layout( push_constant ) uniform constants{    vec2 scale;    vec2 pos;	uint texture_index;} PushConstants;void main() {    mat3 transform;    transform[0] = vec3(PushConstants.scale.x, 0.0, PushConstants.pos.x);    transform[1] = vec3(0.0, PushConstants.scale.y, PushConstants.pos.y);    transform[2] = vec3(0.0, 0.0, 1.0f);    gl_Position = vec4(vec3(positions[gl_VertexIndex], 0.0) * transform, 1.0);    fragUV = positions[gl_VertexIndex];}