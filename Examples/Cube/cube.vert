#version 450layout (location = 0) in vec3 inCubeCenterPos;layout (location = 1) in vec3 inCubeRotationAxis;layout (location = 2) in float inCubeScale;//layout (location = 3) in uint inCubeTextureIndex;layout(location = 0) out mat4 mvp;//layout(location = 3) out uint outCubeTextureIndex;layout(binding = 0) uniform UniformBlock {    mat4 vp;} ub;mat4 computeTransform(vec3 pos, vec3 direction, vec3 scale) {    const vec3 up = vec3(0, -1, 0);    // Ensure direction is normalized    vec3 forward = normalize(direction);    // Create orthonormal basis    vec3 right = normalize(cross(up, forward));    vec3 realUp = cross(forward, right);    return mat4(        vec4(right * scale.x,   0.0),        vec4(realUp * scale.y,  0.0),        vec4(forward * scale.z, 0.0),        vec4(pos,         1.0  )        );}void main() {    mvp = ub.vp * computeTransform(inCubeCenterPos, inCubeRotationAxis, vec3(inCubeScale));    gl_Position = mvp * vec4(0,0,0,1);    //outCubeTextureIndex = inCubeTextureIndex;}