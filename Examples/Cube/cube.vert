#version 450layout (location = 0) in vec3 inCubeCenterPos;layout (location = 1) in vec3 inCubeRotationAxis;layout (location = 2) in float inCubeScale;//layout (location = 3) in uint inCubeTextureIndex;layout(location = 0) out mat4 cubeModel;//layout(location = 3) out uint outCubeTextureIndex;mat4 computeTransform(vec3 pos, vec3 direction, vec3 scale) {    const vec3 up = vec3(0, -1, 0);    // Ensure direction is normalized    vec3 forward = normalize(direction);    // Create orthonormal basis    vec3 right = normalize(cross(up, forward));    vec3 realUp = cross(forward, right);    return mat4(        vec4(right * scale.x,   pos.x),        vec4(realUp * scale.y,  pos.y),        vec4(forward * scale.z, pos.z),        vec4(vec3(0.0),         1.0  )        );}void main() {    cubeModel = computeTransform(inCubeCenterPos, inCubeRotationAxis, vec3(inCubeScale));    gl_Position = vec4(0.0, 0.0, 0.0, 1.0);    //outCubeTextureIndex = inCubeTextureIndex;}