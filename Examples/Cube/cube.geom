#version 450layout (points) in;layout (triangle_strip, max_vertices = 6) out;layout(location = 0) in mat4 cubeModel[];layout(location = 0) out vec2 fragUV;  // Pass to fragment shaderlayout(binding = 0) uniform UniformBlock {    mat4 vp;} ub;vec3 points[8] = vec3[](    vec3(-0.5, -0.5, -0.5),    vec3( 0.5, -0.5, -0.5),    vec3( 0.5,  0.5, -0.5),    vec3(-0.5,  0.5, -0.5),    vec3(-0.5, -0.5,  0.5),    vec3( 0.5, -0.5,  0.5),    vec3( 0.5,  0.5,  0.5),    vec3(-0.5,  0.5,  0.5));// Define cube faces with indices (12 triangles)int indices[36] = int[](    0, 1, 2, 2, 3, 0, // back face    4, 5, 6, 6, 7, 4, // front face    0, 1, 5, 5, 4, 0, // bottom    2, 3, 7, 7, 6, 2, // top    1, 2, 6, 6, 5, 1, // right    0, 3, 7, 7, 4, 0  // left);void main() {    const mat4 transform = ub.vp * cubeModel[0];    for (int i = 0; i < 6; ++i)     {        vec3 pos = points[indices[i]];        gl_Position = transform * vec4(pos, 1.0);        fragUV = points[indices[i]].xy + vec2(0.5);        EmitVertex();        if (i % 3 == 2)            EndPrimitive();    }}